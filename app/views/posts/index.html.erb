<h1>Listing posts</h1>

<ul>
<% @posts.each do |post| %>
  <li>
    <h2><%= link_to post.title, post %></h2>
    <p>by <%= post.author.name %></p>
    <p><%= link_to 'Show', post %> |
    <%= link_to 'Edit', edit_post_path(post) %> |
    <%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></p>
  </li>
<% end %>
</ul>

<p><%= link_to 'New Post', new_post_path %></p>
